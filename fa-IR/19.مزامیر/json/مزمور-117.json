    "verses": [
        {
            "verse": 1,
            "text": [
                "> ای تمامی ملتها، خداوند را ستایش کنید؛",
                "> ای تمامی قومها، او را بستایید!"
            ]
        },
        {
            "verse": 2,
            "text": [
                "> زیرا که رحمت او بر ما عظیم است،",
                "> و راستی خداوند تا ابدالاباد است.",
                "---",
                "> خداوند را ستایش کنید!"
            ]
        }
    ]
}